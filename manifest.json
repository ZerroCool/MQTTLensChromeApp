{
    "manifest_version": 2,
    "name": "MQTTLens Chrome App",
    "version": "0.0.2",
    "minimum_chrome_version": "36",
    "icons": {
        "16": "assets/icon_16.png",
        "128": "assets/icon_128.png"
    },
    "app": {
        "background": {
            "scripts": ["main.js"]
        }
    },
    "permissions": ["<all_urls>", "http://*/*", "https://*/*"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}
